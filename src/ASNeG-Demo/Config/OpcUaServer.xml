      <MaxLogFileNumber>20</MaxLogFileNumber>
      <MaxLogFileSize>5000000</MaxLogFileSize>
      <LogLevel>Trace</LogLevel>
    </FileLogger>
    
    <Log4cxxLogger>
    </Log4cxxLogger>
    
  </Logging>
  
  <Endpoints>
